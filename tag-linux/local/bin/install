#!/usr/bin/env bash

sudo echo 'Ran sudo'

git clone https://github.com/doubledup/dotfiles.git ~/.dotfiles

# packages

sudo apt update
sudo apt upgrade -y
cat ~/.dotfiles/packages/apt | xargs sudo apt install -y

# custom installs

#asdf
git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.8.0
. ~/.asdf/asdf.sh
asdf plugin add nodejs
bash -c '${ASDF_DATA_DIR:=$HOME/.asdf}/plugins/nodejs/bin/import-release-team-keyring'
asdf install nodejs 14.15.4
asdf global nodejs 14.15.4

# flatpaks

#brave-browser
#exercism
#keybase
#kubectl
#kubectx
#lens
#mdl
#minikube
#oni
#postman
#proselint
#scc
#skaffold
#slack
#spotify
#textlint
#vscode
#write-good
#zoomus
