#!/usr/bin/env bash
set -euo pipefail

echo 'mas:'
mas upgrade
echo 'brew:'
brew upgrade
brew bundle dump --global --force
echo 'nvim:'
nvim -e -u ~/.config/nvim/init.vim -i NONE -c "PlugUpgrade" -c "PlugUpdate" -c "CocUpdateSync" -c "TSUpdateSync" -c "qa"
echo 'asdf:'
asdf update
asdf plugin update --all
echo 'rustup:'
rustup update
echo 'tldr:'
tldr --update
echo 'dotfile submodules:'
cd "$HOME/.dotfiles"
git submodule update
cd -

echo 'softwareupdate:'
sudo softwareupdate -ir
