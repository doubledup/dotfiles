{
    "permissions": {
        "allow": [
            "Bash(ls:*)",
            "Bash(pwd)",
            "Bash(wc:*)",
            "Bash(rg:*)",
            "Bash(fd:*)",
            "Bash(which:*)",
            "Bash(echo:*)",
            "Bash(date)",
            "Bash(git diff:*)",
            "Bash(git rev-parse:*)",
            "Bash(git show:*)",
            "Bash(git merge-base:*)",
            "Bash(git symbolic-ref:--short HEAD)",
            "Bash(git log:*)"
        ],
        "deny": [
            "Read(**/.env)",
            "Read(**/.env.*)",
            "Read(**/.envrc)",
            "Read(**/*.envrc.*)",
            "Read(**/secrets/**)",
            "Read(**/.ssh/**)",
            "Read(**/.aws/**)",
            "Bash(sudo:*)",
            "Bash(rm -rf:*)"
        ]
    },
    "enabledPlugins": {
        "lua-lsp@claude-plugins-official": true
    }
}
